{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "target": "ES2016",
    "baseUrl": "app",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["./app/", "__tests__", "types/types.d.ts"],
  "exclude": ["node_modules"]
}
